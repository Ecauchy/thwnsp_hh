// ���C���^�X�N
task Task_Main()
{
	// ���@�w���Z�b�g
	BossEffect_ResetMagicCircle();

	// ��b����
	StartTalk();

	// �o�ꃂ�[�V����
	let xIni = CenX;
	let yIni = 140;
	SetAction(objEnemy, ACT_MOVE, 60);
	ObjMove_SetDestAtWeightSpeedUp(objEnemy, xIni, yIni, 15, 4, 0.1, 12);
	wait(60);
	
	//��b����
	FuncTalk();
	
