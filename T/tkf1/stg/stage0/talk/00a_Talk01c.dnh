@Event {
	alternative(GetEventType())
	case(EV_REQUEST_LIFE)		{ SetScriptResult( 0);	}
	case(EV_REQUEST_TIMER)		{ SetScriptResult(-1);	}
	BossEvent();
}

@Initialize {
	Boss_Init();	//����ݒ�
	objEnemy = CreateBossTalk(BOSS_ID_MINAYU);	//�{�X�Z�b�g
	Task_Main();
}

@MainLoop {
	yield;

}

// ���C���^�X�N
task Task_Main()
{
	// ���@�w���Z�b�g
	BossEffect_ResetMagicCircle();
	//�{�X�l�[���\�����
	BossScene_SetNameVisible(objScene, false);

	// ��b����
	StartTalk();
	wait(60);
	
	//��b����
	FuncTalk();
	wait(15);
	
	// ��ʊO��
	ObjMove_SetDestAtWeightSpeedUp(objEnemy, CenX+64, -256, 15, 3, 0.1, 12);
	SetAction(objEnemy, ACT_MOVE, 60);

	//���̃V�[����
	FinishTalk(true);
	Boss_Finalize(objEnemy, false, false);

	// ����ς�V���b�g�{���֎~
	SetForbidPlayerShot(true);
	SetForbidPlayerSpell(true);
}

// ��b����
function FuncTalk()
{
	let xIni = CenX;
	let yIni = 140;
	
	// �I�u�W�F�N�g�쐬
	let cutinBoss1   = CreateTalkObject(BOSS_ID_MINAYU, true);
	let cutinPlayer1 = CreateTalkObject(BOSS_ID_SANAE_L, false);
	let cutinDescri = CreateDescriptiveObject();
	
	// �摜�t�@�C��
	let pathBoss1   = imgCharaMinayu;
	let pathPlayer1 = imgCharaSanae;
	
	// �B��
	SetImageVisible(cutinBoss1, false);

	SetImageFoward(cutinPlayer1, true);
	wait(15);
	
	let talkID = 0;
	loop
	{
		let talkType = FuncTalkSingle(talkID);
		if (talkType == 0) { break; }
		talkID = max(0, talkID+WaitNext());
	}

	// ��b�����P���i�����߂����o����悤�Ɂj
	function FuncTalkSingle(talkID)
	{
		let talk_type = 1;
		alternative(talkID)
		case(0)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[3]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[3]);
			SetTalkEx(cutinPlayer1, "人类之里那边的人们的记心在逐渐变差，[r]异变正在发生着呢。");
		}
		case(1)
		{
			SetImageVisible(cutinBoss1, false);	// �{�X�摜�o���t���O
			
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[3]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[3]);
			SetTalkEx(cutinPlayer1, "这正是守矢神社解决异变，[r]获取人们信仰的机会！");
		}
		case(2)
		{
			EnterBoss(objEnemy, xIni, yIni);
			SetImageVisible(cutinBoss1, true);	// �{�X�摜�o���t���O

			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[3]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[3]);
			SetTalkEx(cutinBoss1, "那边的巫女同学，[r]可以耽误您一点时间吗？");
		}
		case(3)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[3]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[2]);
			SetTalkEx(cutinPlayer1, "好的，有何贵干？");
		}
		case(4)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[2]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[2]);
			SetTalkEx(cutinBoss1, "我是最近成为神明的，[r]名叫忆尘皆故。");
			SetBossName(cutinBoss1, 280, 220);	// �{�X�l�[���\��
		}
		case(5)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[2]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[2]);
			SetTalkEx(cutinBoss1, "我原本是某种神明，[r]但是最近失去记忆了。");
		}
		case(6)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[2]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[5]);
			SetTalkEx(cutinPlayer1, "真可怜啊。[r]是异变的受害者呢。");
		}
		case(7)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[2]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[5]);
			SetTalkEx(cutinBoss1, "不，失去记忆，[r]是异变之前的事情。");
		}
		case(8)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[2]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[2]);
			SetTalkEx(cutinPlayer1, "连神明的来历的神话，[r]也想不起来了吗？");
		}
		case(9)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[2]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[4]);
			SetTalkEx(cutinBoss1, "来历的话……是没有的……");
		}
		case(10)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[2]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[4]);
			SetTalkEx(cutinPlayer1, "没有！？没有由来吗？");
		}
		case(11)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[2]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[4]);
			SetTalkEx(cutinPlayer1, "真的不是忘记了吗？没有来历，[r]神明怎么能存在？");
		}
		case(12)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[3]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[4]);
			SetTalkEx(cutinBoss1, "一位知名的神明制作人（PRODUCER），[r]为我取了个名字，");
		}
		case(13)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[3]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[4]);
			SetTalkEx(cutinBoss1, "叫做“让人遗忘事物之神”。");
		}
		case(14)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[3]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[2]);
			SetTalkEx(cutinPlayer1, "原来如此，这还真是救世主啊。[r]啊，说起让人遗忘事物，[r]难道说这次的异变是……");
		}
		case(15)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[5]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[2]);
			SetTalkEx(cutinBoss1, "不是的，倒不如说这次的异变，[r]让我也觉得很困扰。");
		}
		case(16)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[5]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[2]);
			SetTalkEx(cutinBoss1, "有“自己的利益被剥夺了”，[r]这样的一种感觉。");
		}
		case(17)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[5]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[2]);
			SetTalkEx(cutinBoss1, "因此，就找到了名门八坂大人的神社巫女的你，[r]想要拜托你解决这个问题。");
		}
		case(18)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[5]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[3]);
			SetTalkEx(cutinPlayer1, "如果不早点解决的话……");
		}
		case(19)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[3]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[3]);
			SetTalkEx(cutinBoss1, "其实，[r]我对这次异变的犯人有些眉目。");
		}
		case(20)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[3]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[4]);
			SetTalkEx(cutinPlayer1, "真的吗！？");
			SetFukidashiType(cutinPlayer1, FUKIDASHI_ANGER);
		}
		case(21)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[2]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[4]);
			SetTalkEx(cutinBoss1, "如今的幻想乡里，有位叫做爱宕大人的神明，[r]和叫做萱野姫大人的神明，[r]正在争斗着。");
		}
		case(22)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[2]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[4]);
			SetTalkEx(cutinBoss1, "爱宕大人军团那边，[r]有人似乎能够做到这种事情。");
		}
		case(23)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[2]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[2]);
			SetTalkEx(cutinPlayer1, "说到爱宕大人军团的话，[r]和神奈子大人也有过一段因缘呢。");
		}
		case(24)
		{
			SetTalkEx(cutinDescri, "※元捏他意义的因缘，[r]和推理内容无关。");
		}
		case(25)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[3]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[2]);
			SetTalkEx(cutinBoss1, "如果能解决这次异变，对我和早苗小姐双方，[r]都是有利的。");
		}
		case(26)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[3]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[2]);
			SetTalkEx(cutinBoss1, "请让我也和您一道去解决异变，[r]您意下如何？");
		}
		case(27)
		{
			ObjPrim_SetTexture(cutinBoss1  ,   pathBoss1[3]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[3]);
			SetTalkEx(cutinPlayer1, "知道了。请多多关照。");
		}
		others
		{
			return(0);
		}
		return(talk_type);
	}
}


task EnterBoss(objEnemy, xIni, yIni)
{
	if (Obj_GetValueD(objEnemy, "BOSS_MOVED", false)) { return; }
	Obj_SetValue(objEnemy, "BOSS_MOVED", true);
	
	SetMovePositionHermite(objEnemy, xIni, yIni,
		600, 90, 100, 210, 60);
	SetAction(objEnemy, ACT_MOVE_L, 60);
}
