@Event {
	alternative(GetEventType())
	case(EV_REQUEST_LIFE)		{ SetScriptResult( 0);	}
	case(EV_REQUEST_TIMER)		{ SetScriptResult(-1);	}
	BossEvent();
}

@Initialize {
	Boss_Init();	//����ݒ�
	objEnemy = CreateBossTalk(BOSS_ID_MINAYU);	//�{�X�Z�b�g
	Task_Main();
}

@MainLoop {
	yield;

