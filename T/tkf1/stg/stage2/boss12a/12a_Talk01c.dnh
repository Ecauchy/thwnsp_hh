// ���C���^�X�N
task Task_Main()
{
	// ���@�w���Z�b�g
	BossEffect_ResetMagicCircle();

	// ��b����
	StartTalk();

	wait(30);

	// �o�ꃂ�[�V����
	let xIni = CenX;
	let yIni = 160;
	SashaFadeIn(xIni, yIni, 90);
	BossEffect_AuraSasha(objEnemy, 0);
	CallSound(sndBoon);
	wait(150);
	
	//��b����
	FuncTalk();
	
	//���̃V�[����
	FinishTalk(true);
	Boss_Finalize(objEnemy, false, false);
}

// ��b����
function FuncTalk()
{
	// �I�u�W�F�N�g�쐬
	let cutinBoss1   = CreateTalkObject(BOSS_ID_SASHA, true);
	let cutinPlayer1 = CreateTalkObject(BOSS_ID_SANAE, false);
	let cutinPlayer2 = CreateTalkObject(BOSS_ID_MINAYU, false);
	
	// �摜�t�@�C��
	let pathBoss1 = imgCharaSasha;
	let pathPlayer1 = imgCharaSanae;
	let pathPlayer2 = imgCharaMinayu;
	
	SetImageFoward(cutinBoss1, true);
	wait(15);
	
	let talkID = 0;
	loop
	{
		let talkType = FuncTalkSingle(talkID);
		if (talkType == 0) { break; }
		talkID = max(0, talkID+WaitNext());
		
		//�I�[���ǂ҂�[��I
		if (talkID == 5 && !Obj_GetValueD(objEnemy, "AURA_FLAG", false))
		{
			BossEffect_AuraSasha(objEnemy, 1);
			CallSound(sndBoon);
			wait(60);
		}
	}

	// ��b�����P���i�����߂����o����悤�Ɂj
	function FuncTalkSingle(talkID)
	{
		let talk_type = 1;
		alternative(talkID)
		case(0)
		{
			ObjPrim_SetTexture(cutinBoss1,     pathBoss1[6]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[2]);
			ObjPrim_SetTexture(cutinPlayer2, pathPlayer2[2]);
			SetTalkEx(cutinBoss1, "おお、守矢の、また会ったのう");
			SetBossName(cutinBoss1, 280, 220);	// �{�X�l�[���\��
		}
		case(1)
		{
			ObjPrim_SetTexture(cutinBoss1,     pathBoss1[6]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[2]);
			ObjPrim_SetTexture(cutinPlayer2, pathPlayer2[5]);
			SetTalkEx(cutinPlayer2, "あら、まだいらしたんですか。");
		}
		case(2)
		{
			ObjPrim_SetTexture(cutinBoss1,     pathBoss1[6]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[2]);
			ObjPrim_SetTexture(cutinPlayer2, pathPlayer2[5]);
			SetTalkEx(cutinPlayer1, "忘れられた存在が多い中息が長いんですね");
		}
		case(3)
		{
			ObjPrim_SetTexture(cutinBoss1,     pathBoss1[6]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[2]);
			ObjPrim_SetTexture(cutinPlayer2, pathPlayer2[4]);
			SetTalkEx(cutinPlayer2, "私の正体も、その忘れられた存在と何か関係が？");
		}
		case(4)
		{
			ObjPrim_SetTexture(cutinBoss1,     pathBoss1[6]);
			ObjPrim_SetTexture(cutinPlayer1, pathPlayer1[5]);
			ObjPrim_SetTexture(cutinPlayer2, pathPlayer2[4]);
			SetTalkEx(cutinPlayer1, "貴方の正体とは別件でじきにそうなりますよ…");
		}
		others
		{
			return(0);
		}
		return(talk_type);
	}
}


// �O�ʂ̃I�[���i�o�ꎞ�j
task SashaFadeIn(x, y, timer)
{
	ObjMove_SetPosition(objEnemy, x, y);
	
	ascent(t in 0 .. timer)
	{
		// �{�̂̓����x
		let tmp_ba = max(0, min(1, (t+1)/timer*2-1)) * 255;
		ObjRender_SetAlpha(GetBossImageID(objEnemy), tmp_ba);
		yield;
	}
}
