task Task_Main()
{
	// ���@�w���Z�b�g
	BossEffect_ResetMagicCircle();

	// ��b����
	StartTalk();

	// �o�ꃂ�[�V�����i�ŏ��͔�\���j
	let xIni = CenX;
	let yIni = 140;
	
	ObjMove_SetDestAtWeightSpeedUp(objEnemy, xIni, yIni, 15, 4, 0.1, 12);
	SetAction(objEnemy, ACT_MOVE, 60);
	BossScene_SetNameVisible(objScene, true);	//�{�X�l�[���\�����

	wait(120);
	
	FuncTalk();
	
	//���̃V�[����
